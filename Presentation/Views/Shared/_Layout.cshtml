<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Presentation.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css" />
    <link rel="stylesheet" href="https://cdn.datatables.net/buttons/2.4.1/css/buttons.bootstrap5.min.css" />    
</head>
<body>
    <header id='navbar-app'>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold" asp-area="" asp-controller="Home" asp-action="Index">TODO</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li v-for="(item,index) in navbarItems" :key="index" class="nav-item">
                            <a :href="`/${item.controller}/${item.action}`" class="nav-link text-dark" :class="{'active': isActive(item)}">
                             {{ item.name }}
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - Presentation - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    @* global loader *@
    <div id="global-loader" class="d-none position-fixed w-100 h-100 top-0 start-0 bg-white bg-opacity-75 d-flex justify-content-center align-items-center" style="z-index: 1050;">
        <div class="spinner-border text-primary" role="status" style="width: 3rem; height: 3rem;">
            <span class="visually-hidden">Loading...</span>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/userService.js" asp-append-version="true"></script>
    <script src="https://unpkg.com/vue@3/dist/vue.global.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.30.1/moment.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://cdn.jsdelivr.net/npm/vue@3/dist/vue.global.prod.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/vue-demi"></script>
    <script src="https://cdn.jsdelivr.net/npm/@@vuelidate/core"></script>
    <script src="https://cdn.jsdelivr.net/npm/@@vuelidate/validators"></script>
    <script src="https://kit.fontawesome.com/6c455eb206.js" crossorigin="anonymous"></script>

    
    <!-- DataTables Buttons JS and dependencies -->
    <script src="https://cdn.datatables.net/buttons/2.4.1/js/dataTables.buttons.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.4.1/js/buttons.bootstrap5.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.4.1/js/buttons.html5.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.4.1/js/buttons.print.min.js"></script>



    <script>
        UserService.setUser({
             id: '47403B8E-B946-4E55-BACA-F0CAB5D3B2C4',
            name: 'Moatasem Al-Naimat'
        });

        window.loader = {
        show: function () {
             $('#global-loader').removeClass('d-none');
        },
        hide: function () {
             $('#global-loader').addClass('d-none');
        }
    };
    </script>

    <script>
        Vue.createApp({
            data(){
                return {
                    navbarItems: [
                        {
                            controller: "Home",
                            action:"Index",
                            name:'Home'
                        },
                        {
                            controller: "Tasks",
                            action:"Index",
                            name:"Tasks"
                        },
                        {
                            controller: "Users",
                            action:"Index",
                            name:"Users"
                        }
                    ],
                    currentPath: window.location.pathname.toLocaleLowerCase()
                }
            },
            methods:{
                isActive(item){
                    const itemPath = `/${item.controller}`.toLowerCase();
                    if(this.currentPath =='/' && item.name.toLowerCase()=='home') return true;
                    return this.currentPath?.includes(itemPath);
                }
            },
         }).mount("#navbar-app");
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>